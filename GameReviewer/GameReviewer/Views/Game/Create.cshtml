@model GameReviewer.Models.Game
<h1>Add Game to List</h1>

<form class="form-inline mbm" asp-action="Create" asp-controller="Game">
    <div>
        <label asp-for="Name"></label>
    </div>
    <div class="form-group">
        <input class="form-control" asp-for="Name" />
    </div>
    <div>
        <label asp-for="Description"></label>
    </div>
    <div class="form-group">
        <input class="form-control" asp-for="Description" />
    </div>
    <div style="margin-top:5px;">
        <input class="btn" type="submit" value="Add Game to List" />
    </div>
</form>